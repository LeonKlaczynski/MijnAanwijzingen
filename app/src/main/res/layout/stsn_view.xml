<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/colorBackgroundFloating"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:background="@drawable/border_stsn"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewAanwijzing"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_aanwstsn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="?attr/colorSurface"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewTrNr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/colorOnBackground"
                                android:text="Treinnummer"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/editTextTrNr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="bv. 1234"
                                android:inputType="textPersonName"
                                android:paddingTop="5sp"
                                android:textColor="?attr/colorOnBackground"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="76dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:background="?attr/colorSurface"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewtrdl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/colorOnBackground"
                                android:text="Treindienstleider"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/editTextTrdl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="bv. Ut"
                                android:inputType="textPersonName"
                                android:paddingTop="5sp"
                                android:textColor="?attr/colorOnBackground"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnBackground"
                    android:text="Emplacement"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/editTextLocation"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Bijv. Wgm"
                    android:inputType="textPersonName"
                    android:paddingTop="5sp"
                    android:textColor="?attr/colorOnBackground"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnBackground"
                    android:text="Seinnummer"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/editTextSignal"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Bijv. 860"
                    android:inputType="textPersonName"
                    android:paddingTop="5sp"
                    android:textColor="?attr/colorOnBackground"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnBackground"
                    android:text="Overweg(en)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/editTextCrossings"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Bijv. 12.3, 45.6 etc."
                    android:inputType="textPersonName"
                    android:paddingTop="5sp"
                    android:textColor="?attr/colorOnBackground"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnBackground"
                    android:text="Brug(gen)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/editTextBridges"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Bijv. 78.9, 90.1 etc."
                    android:inputType="textPersonName"
                    android:paddingTop="5sp"
                    android:textColor="?attr/colorOnBackground"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="start"
                    android:text="• Achter het sein de wissels voorzichtig met max. 10 km/h berijden.
                    \n• Houd rekening met het niet goed functioneren van overwegen.
                    \n• Genoemde bruggen slechts berijden als de afsluitlantaarn voorbijrijden toestaat. 
                    \n• Verder mag de machinist rijden met dienstregelingsnelheid."
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="?attr/colorSurface"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnBackground"
                    android:text="Naam machinist + datum"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/editTextNameDriver"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="FOUT: Geen naam bekend!"
                    android:inputType="textPersonName"
                    android:paddingTop="5sp"
                    android:textColor="?attr/colorOnBackground"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Bijv. 2022-05-05 20:55:45"
                    android:inputType="textPersonName"
                    android:paddingTop="5sp"
                    android:textColor="?attr/colorOnBackground"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>