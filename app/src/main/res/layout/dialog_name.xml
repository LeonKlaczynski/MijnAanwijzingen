<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="30dp"
    app:strokeWidth="0dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="Naam toevoegen"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:text="Iedere nieuwe aanwijzing wordt automatisch ondertekend met zowel de naam van de machinist als de huidige datum en tijd. Geef hieronder je naam op."
            android:textSize="14sp"/>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextTextMcnName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naam"
            app:hintTextColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorPrimary"
            app:boxStrokeColor="?attr/colorPrimary"
            android:layout_marginHorizontal="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bijv. Joop"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAdd"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#00000000"
                android:text="Toevoegen"
                app:rippleColor="?attr/colorPrimary"
                android:textColor="?attr/colorPrimary"
                app:cornerRadius="10dp"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>