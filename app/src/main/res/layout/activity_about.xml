<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/aboutLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="org.treinchauffeur.mijnaanwijzingen.AboutActivity">


        <ImageView
            android:id="@+id/iconView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher_mijnaanwijzingen" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/app_name"
            android:textAppearance="@style/MaterialAlertDialog.Material3.Title.Text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="Versie: X.X"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <TextView
            android:id="@+id/textView4h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_settings_16"
            android:drawablePadding="2dp"
            android:drawableTint="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Instellingen"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/switchHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="5dp"
            android:checked="true"
            android:layoutDirection="rtl"
            app:buttonTint="?attr/colorPrimaryContainer"
            android:text="Suggestie teksten weergeven in formulier"
            android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Naam machinist wijzigen" />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="'Jan van der Steenbergen Ofzo'" />


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonChangeName"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorPrimaryContainer"
                android:drawableLeft="@drawable/ic_baseline_edit_13"
                android:drawableTint="?attr/colorOnPrimaryContainer"
                android:text="Wijzigen"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textSize="12dp"
                app:cornerRadius="15dp" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <TextView
            android:id="@+id/textView1h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_info_16"
            android:drawablePadding="2dp"
            android:drawableTint="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="Over deze app"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Een app die gemaakt is om het digitaal opslaan van ontvangen (spoorse) aanwijzingen to vergemakkelijken. Let op: ontwikkeld door collega met weinig tot geen professionele programmeer-ervaring.

\n\nHet gebruik van deze app is op eigen risico. De ontwikkelaar van deze app kan niet verantwoordelijk worden gehouden voor gebruik van deze app, evenals eventuele gevolgen hiervan. De machinist is ten alle tijden zelf verantwoordelijk voor het juist aannemen, opvolgen en bewaren van aanwijzingen."
            android:textSize="14sp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <TextView
            android:id="@+id/textView2h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_warning_16"
            android:drawablePadding="2dp"
            android:drawableTint="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="Disclaimer"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Deze app 'Mijn Aanwijzingen' is op geen enkele manier gelieerd aan of verwant met zowel de 'Nederlandse Spoorwegen N.V.' als 'ProRail B.V.'"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorPrimary" />

        <TextView
            android:id="@+id/textView3h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_copyright_16"
            android:drawablePadding="2dp"
            android:drawableTint="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="Copyright"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"

            android:text="Een machinist :)"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/emailButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="?attr/colorPrimaryContainer"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_14"
            android:drawableTint="?attr/colorOnPrimaryContainer"
            android:text="Email ontwikkelaar"
            android:textColor="?attr/colorOnPrimaryContainer"
            app:cornerRadius="20dp" />
    </LinearLayout>
</ScrollView>